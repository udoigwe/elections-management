<div class="layout-px-spacing">

    <div class="row super-admin">
        <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">                                
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                            <h4>New Election</h4>
                        </div>                                                                        
                    </div>
                </div>
                <div class="widget-content widget-content-area">
                    <form id="new-election" enctype="multipart/form-data">
                        <div class="form-row mb-4">
                            <div class="form-group col-md-6">
                                <label for="election_title">Election Title <span class="red-asteriks">*</span></label>
                                <input type="text" class="form-control required election_title" name="election_title" placeholder="Election Title">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="election_category">Election Category <span class="red-asteriks">*</span></label>
                                <select class="selectpicker form-control required election_category" name="election_category">
                                    <option value="">Please Select</option>
                                    <option value="Federal">Federal</option>
                                    <option value="State">State</option>
                                    <option value="Local">Local</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Add new Election</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row layout-top-spacing super-admin">
    
        <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                            <h4>Registered Elections</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area br-6">
                <div class="table-responsive mb-4 mt-4">
                    <table id="elections" class="table table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Election Title</th>
                                <th>Election Category</th>
                                <th>Created At</th>
                                <th>Election Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- edit Modal -->
    <div class="modal animated zoomInUp custo-zoomInUp" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Edit Election</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-vertical" id="updateElection" enctype="multipart/form-data">
                        <div class="form-row mb-4">
                            <div class="form-group col-md-4">
                                <label for="election_title">Election Title <span class="red-asteriks">*</span></label>
                                <input type="text" class="form-control required election_title" name="election_title" placeholder="Election Title">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="election_status">Election Status <span class="red-asteriks">*</span></label>
                                <select class="selectpicker form-control required election_status" name="election_status">
                                    <option value="">Please Select</option>
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="election_category">Election Category <span class="red-asteriks">*</span></label>
                                <select class="selectpicker form-control required election_category" name="election_category">
                                    <option value="">Please Select</option>
                                    <option value="Federal">Federal</option>
                                    <option value="State">State</option>
                                    <option value="Local">Local</option>
                                </select>
                            </div>
                        </div>
                        <input type="hidden" name="election_id" class="required election_id" />
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal"><i class="flaticon-cancel-12"></i> Discard</button>
                    <button type="submit" class="btn btn-primary">Update Election</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/assets/js/admin/elections.js"></script>