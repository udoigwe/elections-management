<div class="layout-px-spacing">

    <div class="row super-admin">
        <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">                                
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                            <h4>Select Score Sheet</h4>
                        </div>                                                                        
                    </div>
                </div>
                <div class="widget-content widget-content-area">
                    <form id="select-score-sheet" enctype="multipart/form-data">
                        <div class="form-row mb-4">
                            <div class="form-group col-md-4">
                                <label for="election_id">Election <span class="red-asteriks">*</span></label>
                                <select class="selectpicker form-control required election_id" name="election_id">
                                    <option value="">Please Select</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="state">State <span class="red-asteriks">*</span></label>
                                <select class="selectpicker form-control required state" name="state" data-live-search="true">
                                    <option value="">Please Select</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="polling_unit_id">Polling Unit <span class="red-asteriks">*</span></label>
                                <select class="selectpicker form-control required polling_unit_id" name="polling_unit_id" data-live-search="true">
                                    <option value="">Please Select</option>
                                </select>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary mt-3">Load Score Sheet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row layout-top-spacing super-admin">
    
        <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
            <div class="statbox widget box box-shadow">
                <div class="widget-header">
                    <div class="row">
                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                            <h4>Score Sheet</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area br-6">
                <div class="table-responsive mb-4 mt-4">
                    <table id="score-sheet" class="table table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Candidate Full Name</th>
                                <th>Election</th>
                                <th>Election Category</th>
                                <th>Political Party</th>
                                <th>Candidate Status</th>
                                <th>Poll</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/assets/js/admin/score-sheet.js"></script>